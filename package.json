{
  "name": "questgpt-installer",
  "version": "1.0.0",
  "description": "AI-powered stateful environment manager with intelligent package installation - Desktop App",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "clean": "node -e \"const fs = require('fs'); const path = require('path'); const dir = path.join(__dirname, 'build'); if (fs.existsSync(dir)) { fs.rmSync(dir, { recursive: true, force: true }); console.log('Cleaned build folder'); }\"",
    "prebuild": "npm run clean",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:win": "npm run clean && electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder -mwl"
  },
  "build": {
    "appId": "com.questgpt.installer",
    "productName": "QuestGPT",
    "asar": false,
    "directories": {
      "output": "build",
      "buildResources": "assets"
    },
    "files": [
      "electron-main.js",
      "ui/**/*",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "config.json.example"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "icon": "assets/logo.png",
      "synopsis": "AI-Powered Installation Wizard",
      "description": "QuestGPT - Intelligent package installer with educational quizzes powered by Google Gemini AI"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/logo.png",
      "requestedExecutionLevel": "requireAdministrator",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "QuestGPT",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": false,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/logo.png",
      "category": "public.app-category.developer-tools"
    }
  },
  "keywords": [
    "installer",
    "gemini",
    "ai",
    "terminal",
    "cli",
    "desktop",
    "electron"
  ],
  "author": {
    "name": "QuestGPT Team",
    "email": "prajwal@questgpt.com"
  },
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "chalk": "^4.1.2",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "electron": "^35.0.1",
    "electron-builder": "^24.9.1"
  }
}
